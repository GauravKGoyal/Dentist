@using Dentist.Enums
@using Dentist.ViewModels

@{
    ViewBag.Title = "Doctor Browser";
    var pageSizeArray = new[] {20, 50, 100};
}

@(Html.Kendo().Grid<DoctorListViewModelModel>().Name("grdDoctor")
          .DataSource(dataSource => dataSource.Ajax().Model(model => model.Id(x => x.Id))
              .PageSize(pageSizeArray[0])
              .Sort(sort =>
              {
                  sort.Add(x => x.FirstName).Ascending();
              })
             .Read(read => read.Action("GetBrowserItems", "Doctor"))
          )
          .Columns(columns =>
          {
              columns.Bound(x => x.Id).Width("5%");
              columns.Bound(x => x.FirstName);
              columns.Bound(x => x.LastName);
              columns.Bound(x => x.Email);
              columns.Bound(x => x.Phone);
              columns.Command(
                  command =>
                  {
                      command.Custom("Edit").Click("grdDoctor_onEdit").Text("Edit");
                      command.Custom("Delete").Click("grdDoctor_onDelete").Text("Delete");
                  }).Width("16%");

          })
          .Resizable(resizable => resizable.Columns(true))
              .ToolBar(toolbar => { toolbar.Custom().Name("Create").Action("Create", "Doctor"); })
              .Events(e => e.DataBound("grdDoctor_onDataBound"))
          .Pageable(pager =>
          {
              pager.PageSizes(pageSizeArray);
              pager.Refresh(true);
          })     
          .Sortable()          
          .Scrollable(s => s.Height("auto"))
          .Filterable()              
)

<script>
    $(function() {
       
    });

    function grdDoctor_onDataBound(args) {
        $(".k-grid-Edit").find("span").addClass("k-icon k-edit");
        $(".k-grid-Delete").find("span").addClass("k-icon k-delete");
        $(".k-grid-Create").find("span").addClass("k-icon k-add");
    }

    function grdDoctor_onEdit(e) {
        e.preventDefault();
        var id = $("#grdDoctor").data("kendoGrid").dataItem($(e.currentTarget).closest("tr")).Id;
        window.location.href = "@Url.Action("Edit", "Doctor")" + "/" + id;
    }

    function grdDoctor_onDelete(e) {
        e.preventDefault();
        if (confirm('Are you sure you want to delete this record ?')) {
            var id = $("#grdDoctor").data("kendoGrid").dataItem($(e.currentTarget).closest("tr")).Id;
            $.post('@Url.Action("Delete", "Doctor")' + '?id=' + id, function (data) {
                if (data !== undefined && data !== null && data.Success == 1) {
                    $('#grdDoctor').data('kendoGrid').dataSource.read();
                    $('#grdDoctor').data('kendoGrid').refresh();
                }
            });
        }
    }

</script>