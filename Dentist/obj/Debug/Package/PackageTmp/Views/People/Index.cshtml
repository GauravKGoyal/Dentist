@using Dentist.Enums
@using Dentist.ViewModels

@{
    ViewBag.Title = "People Browser";
    var pageSizeArray = new[] {20, 50, 100};
}

@(Html.Kendo().Grid<PersonListView>().Name("grdPeople")
          .DataSource(dataSource => dataSource.Ajax().Model(model => model.Id(x => x.Id))
              .PageSize(pageSizeArray[0])
              .Sort(sort =>
              {
                  sort.Add(x => x.FirstName).Ascending();
              })
             .Read(read => read.Action("GetBrowserItems", "People"))
             .Group(config => config.AddDescending(x => x.PersonRole))
          )
          .Columns(columns =>
          {
              columns.Bound(x => x.Id).Width("5%");
              columns.Bound(x => x.FirstName);
              columns.Bound(x => x.LastName);
              columns.Bound(x => x.PersonRole).Groupable(true);
              columns.Bound(x => x.Email);
              columns.Bound(x => x.Phone);
              columns.Command(
                  command =>
                  {
                      command.Custom("Edit").Click("grdPeople_onEdit").Text("Edit");
                      command.Custom("Delete").Click("grdPeople_onDelete").Text("Delete");
                  }).Width("16%");

          })
          .Resizable(resizable => resizable.Columns(true))
          .ToolBar(toolbar => { toolbar.Custom().Name("Create").Action("Create", "People"); })
          .Events(e => e.DataBound("grdPeople_onDataBound"))
          .Pageable(pager =>
          {
              pager.PageSizes(pageSizeArray);
              pager.Refresh(true);
          })     
          .Sortable()          
          .Scrollable(s => s.Height("auto"))
          .Filterable()              
          .Groupable()
)

<script>
    //$("#grdPeople").element.delegate("tbody>tr", "dblclick", function () {
    //    $("#grdPeople").editRow($(this));
    //});

    $(function() {
       
    });

    function grdPeople_onDataBound(args) {
        $(".k-grid-Edit").find("span").addClass("k-icon k-edit");
        $(".k-grid-Delete").find("span").addClass("k-icon k-delete");
        $(".k-grid-Create").find("span").addClass("k-icon k-add");
    }

    function grdPeople_onEdit(e) {
        e.preventDefault();
        var id = $("#grdPeople").data("kendoGrid").dataItem($(e.currentTarget).closest("tr")).Id;
        window.location.href = "@Url.Action("Edit", "People")" + "/" + id;
    }

    function grdPeople_onDelete(e) {
        e.preventDefault();
        if (confirm('Are you sure you want to delete this record ?')) {
            var id = $("#grdPeople").data("kendoGrid").dataItem($(e.currentTarget).closest("tr")).Id;
            $.post('@Url.Action("Delete", "People")' + '?id=' + id, function (data) {
                if (data !== undefined && data !== null && data.Success == 1) {
                    $('#grdPeople').data('kendoGrid').dataSource.read();
                    $('#grdPeople').data('kendoGrid').refresh();
                }
            });
        }
    }

</script>